<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCC00">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="104dp"
        android:layout_height="42dp"

        android:text="LOGIN"

        android:textColor="#101010"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129"
        tools:layout_editor_absoluteX="5dp" />

    <EditText
        android:id="@+id/editTextTextPerson"
        android:layout_width="378dp"
        android:layout_height="41dp"
        android:background="#E4A8861F"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="         Name"
        android:textColor="#020202"
        android:textColorLink="#E1C05E"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        tools:layout_editor_absoluteY="260dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="41dp"
        android:layout_height="43dp"
        app:srcCompat="@drawable/ic_group_3"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="260dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="31dp"
        android:layout_height="41dp"
        app:srcCompat="@drawable/ic_password_lock"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="343dp" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="378dp"
        android:layout_height="41dp"
        android:layout_marginTop="44dp"
        android:background="#E4A8861F"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="         Password"
        android:textColor="#101010"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPerson"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPerson"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPerson" />

    <Button
        android:id="@+id/button2"
        android:layout_width="369dp"
        android:layout_height="47dp"
        android:text="LOGIN"
        app:backgroundTint="#090909"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="470dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="241dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="Forgot your password ?"
        android:textColor="#020202"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintStart_toStartOf="@+id/button2"
        tools:layout_editor_absoluteY="597dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_eye"
        tools:layout_editor_absoluteX="346dp"
        tools:layout_editor_absoluteY="354dp" />

</androidx.constraintlayout.widget.ConstraintLayout>